 
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HungryMaui.ViewModels"
             x:Class="HungryMauiClone.Views.MenuPage"
             Title="Pick Up Menu" BackgroundColor="Purple">

    <ContentPage.BindingContext>
        <vm:MenuViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Categories}" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Padding="30" Margin="5" BackgroundColor="White" >
                    <Grid ColumnDefinitions="2*,3*" RowDefinitions="Auto,Auto">
                        <Image Source="{Binding Image}" HeightRequest="200" WidthRequest="200" Margin="350,0,0,0" ></Image>
                        <Label Text="{Binding Name}" TextColor="Black"  FontSize="20" VerticalOptions="Center" />
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>